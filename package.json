{
  "name": "knbn-web",
  "version": "0.1.0",
  "boardVersion": "0.1.0",
  "description": "A web viewer for the KnBn CLI tool",
  "main": "dist/cli/index.js",
  "bin": {
    "knbn-web": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run build:client",
